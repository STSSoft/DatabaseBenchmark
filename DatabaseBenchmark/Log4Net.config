<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <!--Main application appender.-->
    <appender name="ApplicationLogger" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\ApplicationLog.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="250KB" />
      <staticLogFileName value="true" />
      
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--Database error appender.-->
    <appender name="BenchmarkTestLogger" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\BenchmarkTestLog.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="250KB" />
      <staticLogFileName value="true" />
      
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <!--User interface appender.-->
    <appender name="StringLoggerTest" type="DatabaseBenchmark.StringAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="ApplicationLogger" />
    </root>
    
    <logger additivity="false" name="BenchmarkTestLogger">
      <level value="DEBUG"/>
      <appender-ref ref="BenchmarkTestLogger" />
      <appender-ref ref="StringLoggerTest" />
    </logger>
    
  </log4net>
</configuration>
